<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/laywhite"
    android:orientation="vertical"
    android:paddingTop="10pt"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etShowText"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@color/laywhite"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="20pt"
        android:text="0"
        android:textColor="@color/txtblack"
        android:textSize="40sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/buAC"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnwhite"
                android:onClick="buttonCleanEvent"
                android:text="AC"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buPM"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnwhite"
                android:onClick="buttonNumbersEvent"
                android:text="+/-"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bupercentage"
                android:layout_width="30pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnwhite"
                android:onClick="buttonPercentageEvent"
                android:text="%"
                android:textSize="18sp" />

            <Button
                android:id="@+id/budivide"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_weight="1"
                android:background="@color/btnwhite"
                android:onClick="buttonOpsEvent"
                android:text="/"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/bu7"

                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnwhite"
                android:onClick="buttonNumbersEvent"
                android:text="7"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu8"

                android:layout_width="30pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnwhite"
                android:onClick="buttonNumbersEvent"
                android:text="8"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="30pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnwhite"
                android:onClick="buttonNumbersEvent"
                android:text="9"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bumultiply"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_weight="1"
                android:background="@color/btnwhite"
                android:onClick="buttonOpsEvent"
                android:text="x"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/bu4"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnwhite"
                android:onClick="buttonNumbersEvent"
                android:text="4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu5"
                android:layout_width="30pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnwhite"
                android:onClick="buttonNumbersEvent"
                android:text="5"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnwhite"
                android:onClick="buttonNumbersEvent"
                android:text="6"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buminus"
                android:layout_width="30pt"
                android:layout_height="20pt"
                android:layout_weight="1"
                android:background="@color/btnwhite"
                android:onClick="buttonOpsEvent"
                android:text="-"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/bu1"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnwhite"
                android:onClick="buttonNumbersEvent"
                android:text="1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="30pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnwhite"
                android:onClick="buttonNumbersEvent"
                android:text="2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnwhite"
                android:onClick="buttonNumbersEvent"
                android:text="3"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buplus"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_weight="1"
                android:background="@color/btnwhite"
                android:onClick="buttonOpsEvent"
                android:text="+"
                android:textSize="18sp" />
        </TableRow>


    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu0"
            android:layout_width="38pt"
            android:layout_height="20pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/btnwhite"
            android:onClick="buttonNumbersEvent"
            android:text="0"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buDot"
            android:layout_width="16pt"
            android:layout_height="20pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/btnwhite"
            android:onClick="buttonNumbersEvent"
            android:text="."
            android:textSize="18sp" />

        <Button
            android:id="@+id/buEqual"
            android:layout_width="16pt"
            android:layout_height="20pt"
            android:layout_weight="1"
            android:background="@color/btnwhite"
            android:onClick="buttonEqualEvent"
            android:text="="
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>